@model TangerEco.Models.DemandeModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DemandeModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Statut)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Statut)
        </dd>
        @if (!User.IsInRole("DataCollector"))
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DataCollector)
            </dt>
       
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DataCollector.Name)
            </dd>
        }
        @if (!(User.IsInRole("PMini") || User.IsInRole("PUniv")))
        {
            @if(Model.PersonnelMinistreId != null)
            {
               <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.PersonnelMinistre)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.PersonnelMinistre.Name)
                </dd> 
            }
            @if(Model.PersonnelUniversiteId != null)
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.PersonnelUniversite)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.PersonnelUniversite.Name)
                </dd>
            }

            
        }

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DemandeModelId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
